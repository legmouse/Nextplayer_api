<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.nextplayer.base.mapper.BaseMemberMapper">


    <!-- 로그인 인증된 회원 정보 조회 -->
    <select id="getMemberByMemberCd" parameterType="String" resultType="kr.co.nextplayer.base.model.AuthenticationMember">
        SELECT
            member_cd,
            member_id,
            member_state,
            member_nickname
        FROM member
        WHERE member_cd = #{memberCd}
    </select>

</mapper>
